---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Not Found">
  <main class="flex flex-col items-center justify-center min-h-screen text-center px-4">
    <h1 class="text-6xl font-bold text-primary-600 mb-4">404</h1>
    <p class="text-2xl text-gray-600 mb-8">Page Not Found</p>
    <p class="text-gray-500 mb-8">The page you're looking for doesn't exist or has been moved.</p>
    <a
      href="/"
      class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
    >
      Go Back Home
    </a>
  </main>
</Layout>
