---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';

const posts = [
  {
    title: "Introducing ColorScribe: AI-Powered Image Generation",
    excerpt: "Transform your ideas into stunning visuals with our latest product, ColorScribe.",
    date: "2024-03-15",
    author: "Sarah Chen",
    category: "Product Updates",
    image: "https://images.unsplash.com/photo-1550745165-9bc0b252726f?auto=format&fit=crop&q=80",
    slug: "entry-one"
  },
  {
    title: "Best Practices for User Management in 2024",
    excerpt: "Learn how to effectively manage user roles and permissions in modern applications.",
    date: "2024-03-10",
    author: "Michael Rodriguez",
    category: "Tutorials",
    image: "https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&q=80",
    slug: "entry-two"
  },
  {
    title: "The Future of AI Prompt Engineering",
    excerpt: "Discover how Prompt Manager is revolutionizing the way we work with AI models.",
    date: "2024-03-05",
    author: "Alex Thompson",
    category: "Industry Insights",
    image: "https://images.unsplash.com/photo-1677442136019-21780ecad995?auto=format&fit=crop&q=80",
    slug: "entry-three"
  }
];
---

<Layout title="Blog">
  <main class="pt-32 pb-24">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Latest from our <span class="gradient-text">Blog</span>
        </h1>
        <p class="text-xl text-gray-400">
          Insights, tutorials, and updates from the Orchestrate Development team
        </p>
      </div>

      <div class="grid gap-12 max-w-4xl mx-auto">
        {posts.map(post => (
          <article class="group">
            <a href={`/blog/${post.slug}`} class="block">
              <div class="bg-gray-800/50 rounded-2xl overflow-hidden transition-transform duration-300">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="aspect-[2/1] w-full h-full object-cover"
                />
                <div class="p-8">
                  <div class="flex items-center gap-4 text-sm text-gray-400 mb-4">
                    <span>{new Date(post.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                    <span>â€¢</span>
                    <span>{post.category}</span>
                  </div>
                  <h2 class="text-2xl font-bold mb-4 group-hover:text-primary-400 transition-colors">
                    {post.title}
                  </h2>
                  <p class="text-gray-400 mb-6">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-gray-700"></div>
                    <div>
                      <div class="font-medium">{post.author}</div>
                      <div class="text-sm text-gray-400">Author</div>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      <!-- <div class="text-center mt-16">
        <Button variant="outline">
          Load More Articles
        </Button>
      </div> -->
    </div>
  </main>
</Layout>