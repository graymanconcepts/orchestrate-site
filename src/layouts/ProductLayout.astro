---
import Layout from './Layout.astro';
import Button from '../components/ui/Button.astro';

interface Props {
  title: string;
  description: string;
  productName: string;
  featuredImage?: string;
}

const { title, description, productName, featuredImage } = Astro.props;
---

<Layout title={title}>
  <main class="pt-32 pb-24">
    <div class="container mx-auto px-6">
      <!-- Hero Section -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">{productName}</span>
        </h1>
        <p class="text-xl text-gray-400">
          {description}
        </p>
        <div class="flex gap-4 justify-center mt-12">
          <Button href="/demo">Request Demo</Button>
          <!-- <Button href="/docs" variant="outline">View Documentation</Button> -->
        </div>
      </div>

      {featuredImage && (
        <div class="max-w-5xl mx-auto mb-24">
          <div class="aspect-[16/9] bg-gray-800/50 rounded-2xl overflow-hidden shadow-2xl border border-gray-700/50">
            <img 
              src={featuredImage} 
              alt={`${productName} Dashboard`} 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      )}

      <slot />
    </div>
  </main>
</Layout>

<style>
  .gradient-text {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500;
  }
</style>