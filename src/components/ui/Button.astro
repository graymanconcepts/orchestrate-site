---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  id?: string;
}

const { 
  href, 
  variant = 'primary',
  class: className = '',
  type,
  id
} = Astro.props;

const baseStyles = "px-6 py-3 rounded-full font-semibold transition-all duration-300 inline-flex items-center justify-center";
const variants = {
  primary: "bg-gradient-to-r from-primary-500 to-secondary-500 text-white hover:opacity-90",
  secondary: "bg-white text-gray-900 hover:bg-gray-100",
  outline: "border-2 border-gray-700 text-white hover:border-gray-500"
};

const Tag = href ? 'a' : 'button';
---

<Tag 
  href={href} 
  type={type}
  id={id}
  class:list={[baseStyles, variants[variant], className]}
>
  <slot />
</Tag>