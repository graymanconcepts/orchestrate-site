---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="group">
  <div class="bg-gray-800/50 p-8 rounded-2xl border border-gray-700 hover:border-gray-600 transition-all duration-300 h-full">
    <div class="text-4xl mb-4">{icon}</div>
    <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-400 transition-colors">
      {title}
    </h3>
    <p class="text-gray-400">
      {description}
    </p>
  </div>
</a>